<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.UploadActivity">

    <TextView android:layout_width="match_parent"
              android:text="Upload"
              style="@style/AppHeader"
              android:layout_height="wrap_content"
              android:id="@+id/uploadHeader"/>

    <LinearLayout
            android:layout_width="138dp"
            android:layout_marginStart="10dp"
            android:id="@+id/uploadLinearLeft"
            android:orientation="vertical"
            android:layout_below="@id/uploadHeader"
            android:layout_height="185dp">

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/toiletHeader"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:text="Toilet name"/>

        <EditText android:id="@+id/editTextToiletName"
                  android:layout_width="120dp"
                  android:padding="3dp"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:textSize="15sp"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/latHeader"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:text="Latitude"/>

        <EditText android:id="@+id/editTextLat"
                  android:layout_width="120dp"
                  android:padding="3dp"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:textSize="15sp"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/longHeader"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:text="Longitude"/>

        <EditText android:id="@+id/editTextLong"
                  android:layout_width="120dp"
                  android:padding="3dp"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:paddingStart="10dp"
                  android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_toEndOf="@id/uploadLinearLeft"
                  android:layout_below="@id/uploadHeader"
                  android:orientation="vertical"
                  android:layout_height="match_parent">

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/priceHeader"
                  android:text="Price"
                  android:layout_height="wrap_content"/>

        <EditText android:layout_width="120dp"
                  android:padding="3dp"
                  android:id="@+id/editTextPrice"
                  android:background="@color/white"
                  android:layout_height="34dp"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/descriptionHeader"
                  android:text="Description"
                  android:layout_height="wrap_content" android:layout_marginTop="3dp"/>

        <EditText android:layout_width="249dp"
                  android:padding="3dp"
                  android:id="@+id/editTextDescription"
                  android:background="@color/white"
                  android:layout_height="wrap_content" android:layout_marginTop="11dp"/>

    </LinearLayout>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseFileButtonUpload"
            android:layout_marginStart="10dp"
            android:layout_below="@id/uploadLinearLeft"
            android:text="CHOOSE FILE"
            android:layout_marginTop="12dp"/>

    <Button android:layout_width="wrap_content"
            android:id="@+id/addToiletButtonUpload"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="ADD TOILET"
            android:layout_below="@id/chooseFileButtonUpload"
            android:paddingStart="10dp"
            android:layout_marginTop="20dp"/>


</RelativeLayout>